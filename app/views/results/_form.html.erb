<%= form_for(@result) do |f| %>
  <% if @result.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@result.errors.count, "error") %> prohibited this result from being saved:</h2>

      <ul>
      <% @result.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_area :title, :cols => "60", :rows => "1", class: "input-text-area" %>
  </div>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, :cols => "60", :rows => "4", class: "input-text-area" %>
  </div>
  
  <select name="result[quiz_id]" class="input-select">
    <% @quizzes.each do |quiz|%>
      <option value="<%= quiz.id %>" <%= "selected" if quiz.id == @result.quiz_id %>><%= quiz.title %></option>
    <% end %>
  </select>
  <br>

  <div>
    <%= image_tag @result.image.url(:medium)%>
  </div>

  <div class="field">
    <%= f.file_field :image %>
  </div>

  <div class="actions">
    <%= f.submit class:"edit-form-submit-button" %>
  </div>
<% end %>
