<p id="notice"><%= notice %></p>
<div class = "quiz-container">
	<div class = "quiz-title-container">
		<%= @quiz.title %>
	</div>
	<% if @questions.present? %>	
		<%= form_tag({controller:"results",action:"evaluate"}, method: "get", id: "quiz-form") do %>	
			<input type = "hidden" name = "quiz_id" value = "<%= @quiz.id %>">
			<div class = question-list-container>
				<% @questions.each do |question| %>
					<div class = "question-container">
						<div class = "question-title">
							<%= question.title %>
						</div>
						<% if question.options.present? %>
							<div class = "option-list-container">
								<% question.options.each do |option| %>
									<% if option.content.present? %>
										<div class = "option-container">
											<%= image_tag option.content.url(:medium), size: "150x200", alt: option.title %>
											<input type="radio" name="option_selected[<%= question.id %>]" value="<%= option.id %>">
										</div>
									<% end %>
								<% end %>
							</div>
						<% end %>
					</div>
				<% end %>
			</div>
			<div class="quiz-submit-button-container">
				<input class="quiz-submit-button" name="commit" type="submit" value="Submit" />
			</div>
		<% end %>
	<% end %>

	<div id = "result-container">
		<div class = "result-row">
			<div id = "result-title-container">
				<div id = "result-title"></div>
			</div>
		</div>
		<div class = "result-row">
			<div id = "result-image-container">
				<image id = "result-image" height="240" width="180">
			</div>					
			<div id = "result-description-container">
				<div class="centering-table">
   					<div class="centering-table-cell">  	
   						<div id="result-description"></div>			   							
    	  			</div>
  				</div>	
			</div>
		</div>
	</div>
	
	<div class="back-button-container">
		<%= link_to 'Back', root_url, class:"back-button" %>	
	</div>
</div>
