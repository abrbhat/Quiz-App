<h1>Listing quizzes</h1>

<%= link_to 'New Quiz', new_quiz_path, class: "create-new-instance-button" %>

<table class="table">
  <thead>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Result Prefix</th>
      <th>View count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quizzes.each do |quiz| %>
      <tr>
        <td>
          <% if quiz.image.present? %>
            <%= image_tag quiz.image.url(:thumb) %>
          <% end %>
        </td>
        <td><%= quiz.title %></td>
        <td><%= quiz.result_prefix %></th>
        <td><%= quiz.view_count %></td>
        <td><%= link_to 'Show', quiz %></td>
        <td><%= link_to 'Edit', edit_quiz_path(quiz) %></td>
        <td><%= link_to 'Destroy', quiz, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


