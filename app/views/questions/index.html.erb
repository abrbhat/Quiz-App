<h1>Listing questions</h1>

<%= link_to 'New Question', new_question_path, class: "create-new-instance-button" %>

<%= link_to 'New Complete Question', complete_create_form_questions_path, class: "create-new-instance-button" %>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Quiz</th>
      <th>View count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.title %></td>
        <td><%= question.quiz.title %></td>
        <td><%= question.view_count %></td>
        <td><%= link_to 'Show', question %></td>
        <td><%= link_to 'Edit', edit_question_path(question) %></td>
        <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


