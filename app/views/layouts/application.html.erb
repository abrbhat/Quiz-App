<!DOCTYPE html>
<html>
<head>
  <title>QFash</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <link href='http://fonts.googleapis.com/css?family=Great+Vibes' rel='stylesheet' type='text/css'>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <script>
	  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
	  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
	  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
	  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

	  ga('create', 'UA-56543572-1', 'auto');
	  ga('require', 'displayfeatures');
	  ga('require', 'linkid', 'linkid.js');
	  ga('send', 'pageview');

	</script>
</head>
<body class = "site-body">
	<div class = "site-header-container">
		<div class = "site-header">
			<div class = "site-title-container">
				<div class = "site-title">QFash</div>
				<a href = "/">
					<div class = "site-link"></div>
				</a>
			</div>
			<div class = "greeting">
				<div class = "named-greeting">
					<div id = "name"></div> <% if user_signed_in? %><%= link_to "Sign Out", destroy_user_session_path, method: :delete %><% end %>
				</div>
			</div>
			
		</div>		
	</div>
	<div class = "site-content-container">
		<% if user_signed_in? %>
				<div class = "navbar">			
					<%= link_to "Quizzes", quizzes_path, class: "navigation-button" %>
					<%= link_to "Questions" ,questions_path, class: "navigation-button" %>
					<%= link_to "Options", options_path, class: "navigation-button" %>
					<%= link_to "Results", results_path, class: "navigation-button" %>
				</div>
			<% end %>			
		<%= yield %>
	</div>

</body>
</html>
