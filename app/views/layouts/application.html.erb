<!DOCTYPE html>
<html>
<head>
  <title>QFash</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <link href='http://fonts.googleapis.com/css?family=Great+Vibes|Allura' rel='stylesheet' type='text/css'>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <script>
	  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
	  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
	  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
	  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

	  ga('create', 'UA-56543572-1', 'auto');
	  ga('require', 'displayfeatures');
	  ga('require', 'linkid', 'linkid.js');
	  ga('send', 'pageview');
	</script>
</head>
<body id = "site-body">
	<div id = "site-header-container">
		<div id = "site-header">
			<div id = "site-title-container">
				<div id = "site-title">QFash</div>
				<a href = "/">
					<div id = "site-link"></div>
				</a>
			</div>			
			<div id = "viewer-name-container">
				<div id = "named-greeting">
					<span id = "greeting-suffix">Hi</span>
					<span id = "viewer-name"></span><span id = "greeting-prefix">!</span>			
				</div>						
				<div id = "enter-viewer-name-textbox-container">
					<div id = "enter-viewer-name-textbox">
						<%= form_tag(viewers_path(format: :json), method: "post", id: "viewer-name-form") do %>
							<div id = "viewer-form-element-container">
								<div class="form-group">
							    	<input type="text" name="viewer[name]" id="viewer-name-input" placeholder="Your name is..">
							  	</div>						  	
							  	<button type="submit" id="viewer-name-submit-button">That's me!</button>
							</div>
						<% end %>
					</div>
				</div>		
			</div>	
			<% if user_signed_in? %><%= link_to "Sign Out", destroy_user_session_path, method: :delete, class:"sign-out-button" %><% end %>		
		</div>
	</div>
	<div id = "site-content-container">
		<% if user_signed_in? %>
				<div class = "navbar">			
					<%= link_to "Quizzes", quizzes_path, class: "navigation-button" %>
					<%= link_to "Questions" ,questions_path, class: "navigation-button" %>
					<%= link_to "Options", options_path, class: "navigation-button" %>
					<%= link_to "Results", results_path, class: "navigation-button" %>
					<%= link_to "Quiz View Logs" ,quiz_view_logs_path, class: "navigation-button" %>
					<%= link_to "Option Select Logs", option_select_logs_path, class: "navigation-button" %>
					<%= link_to "Result View Logs", result_view_logs_path, class: "navigation-button" %>
				</div>
			<% end %>			
		<%= yield %>
	</div>

</body>
</html>
