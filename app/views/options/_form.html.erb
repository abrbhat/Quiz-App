<%= form_for(@option) do |f| %>
  <% if @option.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@option.errors.count, "error") %> prohibited this option from being saved:</h2>

      <ul>
      <% @option.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :title %>
  </div>
  <select name="option[question_id]">
    <% @questions.each do |question|%>
      <option value="<%= question.id %>"><%= question.title %></option>
    <% end %>
  </select>
  <br>
  <div class="field">
    <%= f.file_field :content %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
